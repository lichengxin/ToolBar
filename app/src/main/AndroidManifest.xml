<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.toolbar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PullRefreshActivity"
            android:label="@string/title_activity_pull_refresh"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SwipRefreshLayout"
            android:label="@string/title_activity_swip_refresh_layout"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.TabActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ViewPagerIndicatorActivity"
            android:label="@string/title_activity_view_pager_indicator"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ViewPagerActivity"
            android:label="@string/title_activity_view_pager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.GuideActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
